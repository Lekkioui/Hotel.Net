<Page x:Class="GestionHotel.RoomsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GestionHotel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RoomsPage">

    <Grid Background="#F5F5F5" Margin="10,-20,10,10">
        <!-- Boutons Ajouter, Modifier, Supprimer -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,342,0,10">
            <Button Content="Ajouter Chambre" Width="150" Height="40" Click="AddButton_Click" Margin="5"/>
            <Button Content="Modifier Chambre" Width="150" Height="40" Click="ModifyButton_Click"/>
            <Button Content="Supprimer Chambre" Width="150" Height="40" Click="DeleteButton_Click" Margin="5"/>
        </StackPanel>

        <!-- Zone pour afficher les chambres -->
        <WrapPanel Name="RoomsWrapPanel" HorizontalAlignment="Center" Margin="10" />
    </Grid>
</Page>
